<% layout("/layouts/boilerPlate") %>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h3>
      <i class="fa-brands fa-airbnb signup-page"></i> Welcome to WanderLust
      Platfrom &nbsp; &nbsp; | &nbsp; &nbsp; Login Page
    </h3>
    <hr />
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          type="text"
          id="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          type="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button type="submit" class="btn btn-dark add-btn col-md-2 offset-5">
        Login
      </button>
    </form>
  </div>
</div>
<div class="text-center mt-4 mb-5">
  Connect With Us <i class="fa-solid fa-heart"></i>
</div>
