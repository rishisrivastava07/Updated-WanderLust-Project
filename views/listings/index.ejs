<% layout("/layouts/boilerPlate") %>
<body>
  <div class="row">
    <div class="col-lg-10 offset-lg-1">
      <br />
      <h3 class="text-center">All Listings</h3>
      <hr />
      <br />
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 justify-content-center">
        <%for(let listing of allListings){%>
        <div class="col d-flex justify-content-center mb-4">
          <div class="card listing-card" style="width: 20rem;">
            <img
              src="<%= listing.image %>"
              class="card-img-top"
              alt="image"
              style="height: 20rem; object-fit: cover;"
            />
            <div class="card-body text-center">
              <h5 class="card-title"><b><%= listing.title %></b></h5>
              <p class="card-text">
                &#8377; <%= listing.price.toLocaleString('en-IN') %> / night
              </p>
              <a href="/listings/<%= listing._id%>" class="btn btn-primary add-btn">
                View Details
              </a>
            </div>
          </div>
        </div>
        <%}%>
      </div>
    </div>
  </div>
</body>
