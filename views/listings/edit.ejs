<%- layout("/layouts/boilerPlate") %>
<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Update Existing Listings</h3>
      <hr />
      <form action="/listings/<%= listing._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            type="text"
            value="<%= listing.title %>"
            class="form-control"
            id="title"
            required
          />
        </div>
        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            type="text"
            class="form-control"
            id="description"
            required
          >
            <%= listing.description %></textarea
          >
          <div class="invalid-feedback">
            Description should be valid
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image Link / URL</label>
          <input
            name="listing[image]"
            type="text"
            value="<%= listing.image %>"
            class="form-control"
            id="image"
            required
          />
          <div class="valid-feedback">
            Link / URL should be added
          </div>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            type="number"
            value="<%= listing.price %>"
            class="form-control"
            id="price"
            required
          />
          <div class="invalid-feedback">
            Price value should be valid
          </div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-6">
            <label for="location" class="form-label">Location</label>
            <input
              name="listing[location]"
              type="text"
              value="<%= listing.location %>"
              class="form-control"
              id="location"
              required
            />  
            <div class="invalid-feedback">
              Location should be valid
            </div>
          </div>
          <div class="mb-3 col-md-6">
            <label for="country" class="form-label">Country</label>
            <input
              name="listing[country]"
              type="text"
              value="<%= listing.country %>"
              class="form-control"
              id="country"
              required
            />
            <div class="invalid-feedback">
              Country name should be valid
            </div>
          </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary add-btn">Update Listings</button>
      </form>
      <br />
      <br />
    </div>
  </div>
</body>
